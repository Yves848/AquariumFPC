{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compiler avec FPC",
      "type": "shell",
      "command": "fpc",
      "args": [
        "${file}",
        "-Fu/opt/homebrew/Cellar/fpc/3.2.2/lib/fpc/3.2.2/units/aarch64-darwin/fcl-json",
        "-Fu/opt/homebrew/Cellar/fpc/3.2.2/lib/fpc/3.2.2/units/aarch64-darwin/fcl-base",
        "-o${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}